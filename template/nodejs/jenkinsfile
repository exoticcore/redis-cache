            steps {
                echo 'Running SonarQube Analysis'
            }
        }
        stage('Build Image') {
            steps {
                dir('template/nodejs') {
                    script {
                        echo "${registry}:v${env.BUILD_NUMBER}"
                        sh 'whoami'
                        sh 'docker compose ps'
                        // sh "docker build -t ${registry}:v${env.BUILD_NUMBER} ."
                    }
                }
            }
        }
        stage('List again') {
            steps {
                sh 'ls -la'
            }
        }
        // stage('Push Docker Image') {
